<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="it.sms1920.spqs.ufit.launcher">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/CustomTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".userprofile.settings.edit.email.EditEmailActivity" />
        <activity android:name=".userprofile.settings.edit.password.EditPasswordActivity" />
        <activity android:name=".userprofile.settings.edit.personalinfo.EditPersonalInfoActivity" />
        <activity android:name=".workoutplan.create.SelectExercisesActivity" />
        <activity android:name=".workoutplan.create.CreatingWorkoutActivity" />
        <activity
            android:name=".splashscreen.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".userprofile.resetpassword.ResetPasswordActivity" />
        <activity android:name=".userprofile.login.LoginActivity" />
        <activity android:name=".userprofile.registration.RegistrationActivity" />
        <activity android:name=".search.SearchActivity" />
        <activity android:name=".exercise.ExerciseActivity" />
        <activity
            android:name=".LauncherActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>