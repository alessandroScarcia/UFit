<resources>
    <style name="CustomMaterialOutlinedEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="errorEnabled">true</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
    </style>

    <style name="CustomMaterialOutlinedEditTextDenseLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="helperTextEnabled">false</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="android:textColorHint">@null</item>
        <item name="suffixTextColor">@color/colorGray50</item>
    </style>

    <style name="CustomMaterialOutlinedEditTextDenseLayoutDropDown" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="helperTextEnabled">false</item>
        <item name="colorControlActivated">@color/colorSecondary</item>

        <item name="android:textColorHint">@null</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
    </style>

    <style name="CustomMaterialEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="errorEnabled">true</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
    </style>

    <style name="CustomMaterialEditText">
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="android:textCursorDrawable">@drawable/ufit_cursor</item>
        <item name="android:textColorLink">@color/colorSecondary</item>
    </style>

    <style name="CustomMaterialButtonIcon" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:colorPressedHighlight">@color/colorTransparent</item>
        <item name="android:colorLongPressedHighlight">@color/colorTransparent</item>
        <item name="background">@color/colorTransparent</item>
        <item name="backgroundTint">@color/colorTransparent</item>
        <item name="backgroundColor">@color/colorTransparent</item>
    </style>

    <style name="CustomMaterialButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="background">@drawable/ufit_button</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="CustomMaterialToolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">

    </style>

</resources>
